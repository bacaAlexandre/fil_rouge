<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/css/normalize.css') }}">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('/css/main.css') }}">
    {% endblock %}
</head>
<body>
<header>
    <nav class="navigation_principal">
        <ul>
            <li>  <a href="" class="lien_nav">Recherche</a></li>
            <li> <a href="{{ path('homepage') }}" id="logo">Netflex</a></li>
            {% if app.user is null %}
                <li> <a href="{{ path('fos_user_security_login') }}" class="lien_nav">Connexion</a></li>
                <li> <a href="{{ path('fos_user_registration_register') }}" class="lien_nav">Inscription</a></li>
            {% else %}
                <li> <a href="" class="lien_nav">Mon compte</a></li>
                <li> <a href="{{ path('fos_user_security_logout') }}" class="lien_nav">Déconnexion</a></li>
            {% endif %}
        </ul>
    </nav>
</header>
<main>
    {% block body %}
    {% endblock %}
    <div class="form_fosuser">
        {% block fos_user_content %}
        {% endblock %}
    </div>
</main>
<footer class="footer_principal">
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('sonata_admin_dashboard') }}" class="lien_nav">Mode Admin</a>
    {% else %}
        <a href="" class="lien_nav">Nous contacter</a>
    {% endif %}
    <span>© 2019 Copyright: NetFlex</span>
</footer>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="{{ asset('/js/main.js') }}"></script>
{% endblock %}
</body>
</html>
